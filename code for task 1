n = int(input("Введите число:"))
if n > 1000:
    print("Ошибка: слишком большое число :(")
elif n < 0:
    print("Упс, это тоже ошибка!")
else:
    def isitPrime(n):
        if n == 2 or n == 3: return True
        if n % 2 == 0 or n < 2: return False
        for i in range(3, int(n ** 0.5) + 1, 2):
            if n % i == 0:
                return False
        return True
    print(isitPrime(n))
